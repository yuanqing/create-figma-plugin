{
  "name": "@create-figma-plugin/build",
  "version": "2.5.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Build a Figma/FigJam plugin/widget",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/build"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "build-figma-plugin": "./lib/cli.js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "clean": "rimraf '*.log' .turbo lib tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:js npm:fix:json",
    "fix:js": "eslint --fix '{src,test}/**/*.ts'",
    "fix:json": "prettier --loglevel error --write '*.json' 'src/**/*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "pretest": "npm run build",
    "test": "ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^2.5.1",
    "chokidar": "^3.5.3",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.1",
    "find-up": "^6.3.0",
    "globby": "^13.2.2",
    "import-fresh": "^3.3.0",
    "indent-string": "^5.0.0",
    "kleur": "^4.1.5",
    "path-exists": "^5.0.0",
    "postcss": "^8.4.27",
    "postcss-modules": "^6.0.0",
    "rev-hash": "^4.0.0",
    "sade": "^1.8.1",
    "temp-write": "^5.0.0",
    "tempy": "^3.1.0",
    "typed-css-modules": "^0.7.2"
  },
  "devDependencies": {
    "@create-figma-plugin/tsconfig": "^2.5.1",
    "@create-figma-plugin/utilities": "^2.5.1",
    "@figma/plugin-typings": "1.74.0",
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.20",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "ava": "^5.3.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-yuanqing": "0.0.8",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "preact": "^10.16.0",
    "prettier": "2.8.8",
    "react": "^18.2.0",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@figma/plugin-typings": ">=1",
    "typescript": ">=4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "tsx"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "root": true,
    "env": {
      "node": true
    }
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
