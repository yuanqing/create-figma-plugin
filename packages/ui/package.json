{
  "name": "@create-figma-plugin/ui",
  "version": "3.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Production-grade Preact components that replicate the Figma UI design",
  "keywords": [
    "components",
    "component-library",
    "create-figma-plugin",
    "design-system",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugin-ds",
    "figma-plugins",
    "figma-ui",
    "forms",
    "preact",
    "ui",
    "ui2"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/ui"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./css/*.css": "./dist/css/*.css"
  },
  "main": "./dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "build": "concurrently npm:build:generate-colors-types npm:build:generate-icons && npm run build:prod",
    "build:generate-colors-types": "tsx scripts/generate-colors-types.ts",
    "build:generate-icons": "tsx scripts/generate-icons.ts",
    "build:generate-index": "rimraf src/index.ts && tsx ../../scripts/generate-index.ts -- 'src/**/*.{ts,tsx}' '!src/**/private/**/*'",
    "build:js": "tsc --build",
    "build:copy-non-ts-files": "tsx scripts/copy-non-ts-files.ts",
    "clean": "rimraf --glob '*.log' lib 'src/**/*.css.d.ts' tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:css npm:fix:json",
    "fix:css": "stylelint --fix 'src/**/*.css'",
    "fix:js": "eslint --fix '{\\.storybook,scripts,src}/**/*.{js,ts,tsx}' --ignore-pattern '*.css.d.ts' --ignore-pattern src/index.ts",
    "fix:json": "prettier --log-level error --write '*.json'",
    "lint": "concurrently npm:lint:css npm:lint:js",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint '{\\.storybook,scripts,src}/**/*.{js,ts,tsx}' --ignore-pattern src/index.ts",
    "prestorybook-build": "rimraf build",
    "storybook-build": "storybook build --output-dir build",
    "prestorybook-watch": "rimraf build",
    "storybook-watch": "storybook dev --port 4242",
    "build:prod": "vite build"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "^3.1.0"
  },
  "devDependencies": {
    "@sindresorhus/slugify": "2.2.1",
    "@storybook/addon-storysource": "7.6.4",
    "@storybook/addon-toolbars": "7.6.4",
    "@storybook/preact": "7.6.4",
    "@storybook/preact-vite": "7.6.4",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "camelcase": "8.0.0",
    "concurrently": "8.2.2",
    "eslint": "8.55.0",
    "eslint-config-yuanqing": "0.0.9",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "globby": "14.0.0",
    "preact": "10.19.2",
    "prettier": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.5",
    "storybook": "7.6.4",
    "stylelint": "16.0.0",
    "stylelint-config-yuanqing": "0.0.5",
    "svgo": "3.0.5",
    "tsx": "4.6.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true
    },
    "ignorePatterns": [
      "*.css.d.ts"
    ]
  },
  "sideEffects": [
    "*.css"
  ],
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  }
}
